@model DatPhongKhachSanWeb.KhachHangServiceReference.KhachHangDTO

<link href="~/Content/bootstrap.css" rel="stylesheet" />
@{
    ViewBag.Title = "DangKy";
    //Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<div style="padding-left:400px; background-color:#d7d1d4">

    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal"> 
            <h2>Đăng ký</h2>    
            <h4 style="color:red">*  Không được bỏ trống</h4>       
            <h3 style="color:#164bdd">@ViewBag.ThongBao</h3>
            <hr />
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

            <div class="form-group">
                @Html.Label("Mã khách hàng: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Makhachhang, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loimakhach"></span>
                    @*@Html.ValidationMessageFor(model => model.Makhachhang, "*", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tên khách hàng: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loitenkh"></span>
                    @*@Html.ValidationMessageFor(model => model.Tenkhachhang, "*", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Mật khẩu: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loipass"></span>
                    @*@Html.ValidationMessageFor(model => model.Pass, "*", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Giới tính: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                    <div class="checkbox">
                       @Html.EditorFor(model => model.Gioitinh)
                        <span id="loisex"></span>
                        @*@Html.ValidationMessageFor(model => model.Gioitinh, "*", new { @class = "text-danger" })*@
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("CMND or Passport: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CMND_PASSPORT, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loicmnd"></span>
                   @* @Html.ValidationMessageFor(model => model.CMND_PASSPORT, "*", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Địa chỉ: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số điện thoại: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sodienthoai, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loisdt"></span>
                    @*@Html.ValidationMessageFor(model => model.Sodienthoai, "*", new { @class = "text-danger" })*@
                </div>
            </div>            

            <div class="form-group">
                @Html.Label("Email: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    <span id="loiemail"></span>
                    @*@Html.ValidationMessageFor(model => model.Email, "*", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="btnSubmit" type="submit" value="Đăng ký" class="btn btn-primary" />                                       
                </div>
            </div>
            
        </div>
    }
   
</div>
<script type="text/javascript">    
    $("#btnSubmit").click(function ()
        {
            var loi = 0;
            if ($('#Makhachhang').val() == "") {
                $('#loimakhach').text('Bạn chưa nhập mã cũng như tên tài khoản');
                loi++;
            }
            else {
                $('#loimakhach').text('');
            }
            if ($('#Tenkhachhang').val() == "") {
                $('#loitenkh').text('Bạn chưa nhập tên của bạn');
                loi++;
            }
            else {
                $('#loitenkh').text('');
            }
            if ($('#Pass').val() == "") {
                $('#loipass').text('Bạn chưa nhập password');
                loi++;
            }
            else {
                $('#loipass').text('');
            }
            if ($('#Gioitinh').val() == "") {
                $('#loisex').text('Bạn chưa check giới tính');
                loi++;
            }
            else {
                $('#loisex').text('');
            }
            if ($('#CMND_PASSPORT').val() == "") {
                $('#loicmnd').text('Bạn chưa nhập CMND or Passport');
                loi++;
            }
            else {
                $('#loicmnd').text('');
            }
            if ($('#Sodienthoai').val() == "") {
                $('#loisdt').text('Bạn chưa nhập số điện thoại');
                loi++;
            }
            else {
                $('#loisdt').text('');
            }
            if ($('#Email').val() == "") {
                $('#loiemail').text('Bạn chưa nhập Email');
                loi++;
            }
            else {
                $('#loiemail').text('');
            }
            if(loi!=0)
            {
                return false;
            }
            return true;
        });

    
</script>